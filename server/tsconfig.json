{
  "compilerOptions": {
    "target": "ES2020", // JavaScript version to output
    "module": "CommonJS", // Node.js uses CommonJS modules
    "rootDir": "./", // Your TypeScript source folder
    "outDir": "./dist", // Output folder for compiled JS
    "strict": true, // Enable all strict type checks
    "esModuleInterop": true, // For default imports of CommonJS modules
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "sourceMap": true, // Optional: helps debugging
  },
  "include": ["src/**/*"], // Include all TS files in src
  "exclude": ["node_modules", "dist"], // Ignore these folders
}
